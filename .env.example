# Configuración de la aplicación
# IMPORTANTE: Cambia estos valores antes de usar en producción
SECRET_KEY=CHANGE-THIS-SECRET-KEY-TO-A-RANDOM-STRING-BEFORE-PRODUCTION
DATABASE_URL=sqlite:///operations.db

# Configuración de sesión
# PERMANENT_SESSION_LIFETIME=86400  # 24 horas (por defecto)

# Configuración de rate limiting
# MAX_LOGIN_ATTEMPTS=5  # Intentos de login antes de bloquear (por defecto)
# LOCKOUT_DURATION=300  # Duración del bloqueo en segundos (por defecto: 5 minutos)

# Configuración del servidor SMB (opcional - configura si usas integración SMB)
SMB_SERVER_NAME=your-smb-server-name
SMB_SERVER_IP=192.168.1.100
SMB_SHARE_NAME=your-share-name
SMB_USERNAME=your-smb-username
SMB_PASSWORD=your-smb-password
SMB_DOMAIN=WORKGROUP

# Configuración de caché
# CACHE_TTL=30  # Time to live en segundos (por defecto)

# URLs externas configurables
TELEMETRY_URL=http://example.com/telemetry
MINERALS_URL=http://172.16.11.155:8005/get_html
